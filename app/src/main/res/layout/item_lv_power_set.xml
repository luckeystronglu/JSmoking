<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_power_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_power_num"
                android:layout_width="wrap_content"
                android:text="6"
                android:textSize="@dimen/font_14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:layout_marginLeft="@dimen/horizontal_2"
                android:layout_height="wrap_content"
                android:text="@string/smoke_power_unit"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_item_choice_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/vertical_30"
                android:layout_height="@dimen/vertical_30"
                android:src="@drawable/icon_choiced"/>

        </LinearLayout>



    </LinearLayout>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/vertical_4"-->
        <!--android:background="@color/app_bg_light_gray"/>-->


</LinearLayout>