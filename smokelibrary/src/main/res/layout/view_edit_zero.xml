<?xml version="1.0" encoding="utf-8"?>
    <!--不良产品数-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_60"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start_zero_name"
            android:layout_width="@dimen/horizontal_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_16"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_14sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <!-- android:id="@+id/ll_sqc_amount"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vertical_42"
                android:background="@drawable/drawable_ll_adjust_amount"
                android:divider="@drawable/diliver_vertical_line"
                android:orientation="horizontal"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/ll_amount_minus"
                    android:layout_width="@dimen/horizontal_60"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/vertical_20"
                        android:layout_height="@dimen/vertical_20"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_temp_minus" />
                </LinearLayout>
                <!--android:id="@+id/iv_adjust_amount_minus"-->

                <EditText
                    android:id="@+id/et_input_from_zero"
                    android:layout_width="@dimen/horizontal_70"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:digits="@string/digits_et_positive_amount"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="@color/textGray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_16sp" />
                <!--android:inputType="number"-->
                <LinearLayout
                    android:id="@+id/ll_amount_plus"
                    android:layout_width="@dimen/horizontal_60"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/vertical_20"
                        android:layout_height="@dimen/vertical_20"
                        android:src="@drawable/icon_temp_plus" />
                </LinearLayout>
                <!--android:id="@+id/iv_adjust_amount_plus"-->


            </LinearLayout>
        </LinearLayout>

</LinearLayout>