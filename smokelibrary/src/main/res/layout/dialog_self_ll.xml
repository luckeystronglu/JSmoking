<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/self_dialog_ll_title"
        android:background="@drawable/shape_dialog_top_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/self_dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16sp"
            android:paddingLeft="@dimen/horizontal_16"
            android:paddingRight="@dimen/horizontal_16"
            android:paddingTop="@dimen/vertical_20"
            android:paddingBottom="@dimen/vertical_20"
            android:textColor="@color/white"
            />
        <!--android:text="这是标题"-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/horizontal_16"
        android:paddingRight="@dimen/horizontal_16">
        <!--这是内容-->

        <TextView
            android:id="@+id/self_dialog_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14sp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/vertical_80"
            android:maxHeight="@dimen/vertical_120"
            android:textColor="@color/text_light_black"
            android:background="@null"
            />
        <!--<EditText-->
            <!--android:id="@+id/et_dlg_step_desc"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/font_14sp"-->
            <!--android:minHeight="@dimen/vertical_80"-->
            <!--android:maxHeight="@dimen/vertical_120"-->
            <!--android:textColor="@color/text_light_black"-->
            <!--android:textColorHint="@color/text_dark_gray"-->
            <!--android:textCursorDrawable="@drawable/color_cursor"-->
            <!--android:background="@null"-->
            <!--/>-->
        <!--android:hint="请输入内容……"-->
    </LinearLayout>


    <TextView
        android:id="@+id/self_dialog_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/blue_status"/>
    <!--android:background="@color/lib_divider_line_color"-->


    <LinearLayout
        android:background="@drawable/shape_dialog_bottom_ll2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_60"
        android:orientation="horizontal">
        <!--android:divider="@drawable/divider_vertical_line_status"
        android:showDividers="middle"-->

        <TextView
            android:id="@+id/self_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/font_14sp"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="取消"
            />

        <TextView
            android:id="@+id/self_dialog_divider_vline"
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="@color/blue_status"/>

        <TextView
            android:id="@+id/self_dialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/font_14sp"
            android:gravity="center"
            android:textColor="@color/blue_status"
            android:text="确定"
            />
    </LinearLayout>

</LinearLayout>